{
  "manifest_version": 3,
  "name": "Send Selected Text to Server",
  "version": "1.0",
  "description": "Right-click selected text and send it to a configured server.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Send to Server"
  }
}